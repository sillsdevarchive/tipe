<?xml version="1.0" encoding="UTF-8"?>

<!--
File: bookTex.xml
Description:
This is a project or Document type description for a book publication to be rendered
with TeX. All file relations and processes are described in this file.

Todo:
1) Add a process section where all processes are described
2) Add file type section that describes each kind of type of file found in the component
3) Need a section to describe project folder attributes <location>
4) Need a default book project section that the system will use to start a project

-->

<!DOCTYPE root [
  <!ELEMENT root (section+)>
  <!ELEMENT section (name, sectionID, description, (setting | file | folder | process)+)>
  <!ELEMENT file (name, type, location, dependents, createdBy, description)>
  <!ELEMENT folder (name, key, description, value)>
  <!ELEMENT process (name, type, description)>
  <!ELEMENT setting (name, key, description, type*, value)>
  <!ELEMENT sectionID (#PCDATA)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT key (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT type (#PCDATA)>
  <!ELEMENT location (#PCDATA)>
  <!ELEMENT dependents (#PCDATA)>
  <!ELEMENT createdBy (#PCDATA)>
  <!ELEMENT value (#PCDATA)>
]>

<root>
    <section>
        <name>Project Information</name>
        <sectionID>ProjectInfo</sectionID>
        <description>This section contains general project info for this project.</description>
        <setting>
            <name>Project Type</name>
            <key>projectType</key>
            <description>This project type name.</description>
            <type>string</type>
            <value>bookTex</value>
        </setting>
        <setting>
            <name>Project Name</name>
            <key>projectName</key>
            <description>The name of the current project the system is processing.</description>
            <type>string</type>
            <value>None</value>
        </setting>
        <setting>
            <name>Project ID Code</name>
            <key>projectIDCode</key>
            <description>The current project's ID code.</description>
            <type>string</type>
            <value>None</value>
        </setting>
        <setting>
            <name>Project Creation Date</name>
            <key>projCreateDate</key>
            <description>The date this project was created.</description>
            <type>string</type>
            <value></value>
        </setting>
        <setting>
            <name>Project Settings Last Edit Date</name>
            <key>projectEditDate</key>
            <description>Time stamp of when the project settings were last edited.</description>
            <type>string</type>
            <value></value>
        </setting>
    </section>
    <section>
        <name>Project Folder Names</name>
        <sectionID>Folders</sectionID>
        <description>This section contains the names of all the folders used by the TIPE system for this type of project.</description>
        <setting>
            <name>Administrative Folder Name</name>
            <key>adminFolder</key>
            <description>The name of the folder that all project administrative documents will be kept.</description>
            <type>string</type>
            <value>Admin</value>
        </setting>
        <setting>
            <name>Fonts Folder Name</name>
            <key>fontsFolder</key>
            <description>The name of the folder that all project fonts will be kept.</description>
            <type>string</type>
            <value>Fonts</value>
        </setting>
        <setting>
            <name>Process Folder Name</name>
            <key>processFolder</key>
            <description>The name of the folder that the processes are run.</description>
            <type>string</type>
            <value>Process</value>
        </setting>
        <setting>
            <name>Report Folder Name</name>
            <key>reportFolder</key>
            <description>The name of the folder that reports are kept.</description>
            <type>string</type>
            <value>Reports</value>
        </setting>
        <setting>
            <name>Regression Testing Folder Name</name>
            <key>regressionFolder</key>
            <description>The name of the folder that all project regression base files will be kept.</description>
            <type>string</type>
            <value>.regression</value>
        </setting>
        <setting>
            <name>Wiki Notes Folder Name</name>
            <key>wikiFolder</key>
            <description>The name of the folder that all project notes will be kept.</description>
            <type>string</type>
            <value>.wiki</value>
        </setting>
    </section>
    <section>
        <name>Format</name>
        <sectionID>Format</sectionID>
        <description>Settings having to do with the formating of this publication.</description>
        <setting>
            <name>Page Width</name>
            <key>pageWidth</key>
            <description>The trimmed width of the page.</description>
            <type>integer</type>
            <value>150</value>
        </setting>
        <setting>
            <name>Page Height</name>
            <key>pageHeight</key>
            <description>The trimmed height of the page.</description>
            <type>integer</type>
            <value>210</value>
        </setting>
    </section>
    <section>
        <name>File Relationships</name>
        <sectionID>FileNames</sectionID>
        <description>Project file relationships are described in this section.</description>
        <setting>
            <name>GlobalTex TeX File</name>
            <key>globalTex</key>
            <fileType>tex</fileType>
            <location>Process</location>
            <dependents>*.ttf, ptx2pdf.tex, hyphenation.tex, .book.conf, global.sty</dependents>
            <createdBy>autoConfigProj</createdBy>
            <description>The global contol file that feeds into the the component control file.</description>
            <type>string</type>
            <value>global.tex</value>
        </setting>
        <setting>
            <name>BookTex TeX File</name>
            <key>bookTexTex</key>
            <fileType>tex</fileType>
            <location>Process</location>
            <dependents>none</dependents>
            <createdBy>readOnly</createdBy>
            <description>The master TeX macro contol file that feeds into the the global control file.</description>
            <type>string</type>
            <value>bookTex.tex</value>
        </setting>
        <setting>
            <name>BookTex Configuration File</name>
            <key>bookTexConf</key>
            <fileType>conf</fileType>
            <location>root</location>
            <dependents>book.xml</dependents>
            <createdBy>system</createdBy>
            <description>The project (book) configuration file that is created from the project type xml file.</description>
            <type>string</type>
            <value>.bookTex.conf</value>
        </setting>
        <setting>
            <name>BookTex XML File</name>
            <key>bookTexXml</key>
            <fileType>xml</fileType>
            <location>[tipe]</location>
            <dependents>none</dependents>
            <createdBy>readOnly</createdBy>
            <description>The project (book) master XML configuration file that is used by the system to setup projects with default settings.</description>
            <type>string</type>
            <value>bookTex.xml</value>
        </setting>
<!--        <setting>-->
<!--            <name>[font]</name>-->
<!--            <key></key>-->
<!--            <fileType>ttf</fileType>-->
<!--            <location>Fonts</location>-->
<!--            <dependents>none</dependents>-->
<!--            <createdBy>system</createdBy>-->
<!--            <description>Fonts used for rendering all the components in the project.</description>-->
<!--            <type>string</type>-->
<!--            <value></value>-->
<!--        </setting>-->
        <setting>
            <name>Hyphenation TeX File</name>
            <key>hyphenationTex</key>
            <fileType>tex</fileType>
            <location>Hyphenation</location>
            <dependents>book.conf, wordlist.txt, lccode.tex</dependents>
            <createdBy>system</createdBy>
            <description>Hyphenation file for project which is used by the renderer.</description>
            <type>string</type>
            <value>hyphenation.tex</value>
        </setting>
        <setting>
            <name>Wordlist File</name>
            <key>wordlistTxt</key>
            <fileType>txt</fileType>
            <location>Hyphenation</location>
            <dependents>none</dependents>
            <createdBy>system</createdBy>
            <description>Wordlist for all components in this project. </description>
            <type>string</type>
            <value>wordlist.txt</value>
        </setting>
        <setting>
            <name>Lccode TeX File</name>
            <key>lccodeTex</key>
            <fileType>tex</fileType>
            <location>Hyphenation</location>
            <dependents>.book.conf</dependents>
            <createdBy>system</createdBy>
            <description>The lccode is a file used to declair non-word-forming characters.</description>
            <type>string</type>
            <value>lccode.tex</value>
        </setting>
    </section>
</root>

