<?xml version="1.0" encoding="UTF-8"?>
<root>
    <section id='defaults'>
        <name>Component ID</name>
        <description>A publication component.</description>
        <setting id='componentType'>
            <name>Component Type</name>
            <description>The name of the style file for this component.</description>
            <type>option</type>
                <opt1>Scripture</opt1>
                <opt2>Dictionary</opt2>
            <default>Scripture</default>
        </setting>
        <setting id='componentFileName'>
            <name>Component File Name</name>
            <description>The name of this component file.</description>
            <type>string</type>
            <default>[comp].usfm</default>
        </setting>
        <setting id='styleFileName'>
            <name>Style File Name</name>
            <description>The name of the style file for this component.</description>
            <type>string</type>
            <default>[comp].sty</default>
        </setting>
        <setting id='texFileName'>
            <name>TeX File Name</name>
            <description>The name of the TeX file for this component.</description>
            <type>string</type>
            <default>[comp].tex</default>
        </setting>
    </section>
</root>

